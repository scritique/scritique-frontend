# SMTP Configuration
# Replace these values with your actual SMTP server details

REACT_APP_SMTP_HOST=your-smtp-server.com
REACT_APP_SMTP_PORT=587
REACT_APP_SMTP_SECURE=false
REACT_APP_SMTP_USER=your-email@domain.com
REACT_APP_SMTP_PASS=your-password

# Rate Limiting Configuration
# Adjust these values based on your needs

REACT_APP_MAX_SUBMISSIONS_PER_HOUR=5
REACT_APP_MAX_SUBMISSIONS_PER_DAY=20
REACT_APP_COOLDOWN_PERIOD_MS=60000

# Email Addresses for Different Form Types
# Update these with your actual email addresses

REACT_APP_EMAIL_CONTACT=contact@scritique.com
REACT_APP_EMAIL_EXPERT=expert@scritique.com
REACT_APP_EMAIL_CAREERS=careers@scritique.com
REACT_APP_EMAIL_HR=hr@scritique.com
REACT_APP_EMAIL_GENERAL=info@scritique.com

# Common SMTP configurations:
# Gmail: smtp.gmail.com, port 587, secure false
# Outlook: smtp-mail.outlook.com, port 587, secure false
# Yahoo: smtp.mail.yahoo.com, port 587, secure false
# Custom: your-smtp-server.com, port 587, secure false

# For Gmail, you need to:
# 1. Enable 2-factor authentication
# 2. Generate an "App Password" from Google Account settings
# 3. Use the app password instead of your regular password 